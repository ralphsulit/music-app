<h1>
  Artists
</h1>

<table>
  <thead>
    <tr>
      <th> ID </th>
      <th> Name </th>
      <th> Bio </th>
      <th> Permalink </th>
      <th> Avatar Url </th>
      <th> Cover Photo </th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <td> <%= artist.id %> </td>
        <td> <%= artist.name %> </td>
        <td> <%= artist.bio %> </td>
        <td> <%= artist.permalink %> </td>
        <td> <%= artist.avatar_url %> </td>
        <td> <%= artist.cover_photo_url %> </td>
        <td> 
          <%= link_to edit_artist_path(artist.id) do %>
            Edit
          <% end %>

          <%= link_to artist_path(artist.id), method: :delete do %>
            Delete
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Artist', new_artist_path%>